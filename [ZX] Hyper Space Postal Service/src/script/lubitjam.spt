ENTERING GAME
	IF TRUE
	THEN
		SET FLAG 1 = 0
		SET FLAG 2 = 1
		EXTERN 10
	END
END


PRESS_FIRE AT SCREEN 0
	IF PLAYER_TOUCHES 1, 6
	THEN
		SOUND 7
		EXTERN 16
		WIN
	END
END


ENTERING SCREEN 0
    IF TRUE
    THEN
        SET TILE (0, 3) = 33
        SET TILE (0, 9) = 36
		SET TILE (13, 3) = 34
		SET TILE (13, 9) = 35
		EXTERN 15
    END
END



ENTERING SCREEN 7
    IF FLAG 2 = 3
    THEN
        SET TILE (13, 8) = 22
		SET_FIRE_ZONE 0, 0, 240, 160
    END
END

PRESS_FIRE AT SCREEN 7
	IF FLAG 2 = 3
	IF PLAYER_TOUCHES 13, 8
	THEN
		SOUND 7
		EXTERN 13
		SET FLAG 2 = 4
		SET TILE (13, 8) = 0
	END
END




ENTERING SCREEN 8
    IF TRUE
    THEN
        SET TILE (0, 1) = 33
        SET TILE (0, 7) = 36
		SET TILE (13, 1) = 34
		SET TILE (9, 6) = 20
		SET TILE (6, 6) = 21
    END
