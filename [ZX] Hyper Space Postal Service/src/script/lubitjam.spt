	IF FLAG 2 = 1
	IF PLAYER_TOUCHES 1, 6
	THEN
		SOUND 7
		EXTERN 11
		SET FLAG 2 = 2
		SET TILE (9, 6) = 9
		SET TILE (13,6) = 0
	END
